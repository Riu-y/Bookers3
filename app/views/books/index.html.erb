<div class="container">
  <div class="row">
     <div class ="col-xs-3">
      <%= render 'layouts/list', {user: @user, book:@book } %>
      </div>
       <div class="col-xs-9">
        <table class="table table-hover white">
          <thred>
          	<tr>
          		<th></th>
          		<th>Title</th>
          		<th>Opinion</th>
          	</tr>
          </thred>
          <% @books.each do |book| %>
          <tbody>
          	<tr>
          	  <td><%= link_to user_path(book.user) do %>
                <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
                <% end %></td>
          	  <td><%= link_to book.title,book_path(book.id) %></td>
          	  <td><%= book.body %></td>
            </tr>
          <% end %>
          </tbody>
       </table>
    </div>
  </div>
</div>



