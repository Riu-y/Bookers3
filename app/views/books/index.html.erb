<%= render 'layouts/list', {user: @user, book:@book } %>

<table>
  <thred>
  	<tr>
  		<th></th>
  		<th>Title</th>
  		<th>Opinion</th>
  	</tr>
  </thred>
  <% @books.each do |book| %>
  <tbody>
  	<tr>
	  <td><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", class: "img-circle pull-left profile-thumb" %></td>
	  <td><%= link_to book.title,book_path(book.id) %></td>
	  <td><%= book.body %></td>
    </tr>
  <% end %>
</table>


