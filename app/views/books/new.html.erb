<!-- 本を新規投稿する画面 -->
<h1>New Book</h1>

<%= form_for(@book) do |f| %>

  <div class="field">
     <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :opinion %>
    <%= f.text_area :body %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<% if @book.errors.any? %>
 <div class="alert">
    <% @book.errors.full_messages.each do |message| %>
    <span><%= message %></span>
  <% end %>
</div>
<% end %>