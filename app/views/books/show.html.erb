<div class="container">
  <div class="row">
     <div class ="col-xs-3"><%= render 'layouts/list', { user: @user, book:@book } %> </div>
	  <div class ="col-xs-9">
		<h1>Book detail</h1>
		<table class="table table-hover white">
			<tbody>
				<tr>
					<td>
					 <%= attachment_image_tag @user,:profile_image, :fill, 50,50, format:'jpeg',fallback: "no_image.jpg" %>
					 <%=link_to @user.name, user_path(@user) %>
					</td>
					<td><%= @bookfind.title %></td>
					<td><%= @bookfind.body %></td>
					<td><% if @bookfind.user == current_user %>
						<div class="botton">
							<button type="button" class="btn btn-success button-edit">
					 	    <%= link_to "Edit", edit_book_path(@bookfind) %></button>
					 	    <button type="button" class="btn btn-danger botton-danger"><%= link_to "Destroy", book_path(@bookfind), method: :delete, "date-confirm" => "本当に削除して良いですか？"%></button>
					 	</div>
					</td>
					<% end %>
				</tr>
			</tbody>
		</table>
	  </div>
	</div>
</div>
