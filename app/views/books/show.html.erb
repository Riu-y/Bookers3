<%= render 'layouts/list', { user: @user, book:@book } %>

<h1>Book detail</h1>
<table>
	<tbody>
		<tr>
			<td></td>
			<td><%= @bookfind.title %></td>
			<td><%= @bookfind.body %></td>
			<td>
			   <span class="button">
			 	<%= link_to "edit", edit_book_path(@bookfind) %>
		 	   </span>
     		   <span class="button">
                <% if @bookfind.user == current_user %>
			 	<%= link_to "Destroy", book_path(@bookfind), method: :delete, "date-confirm" => "本当に削除して良いですか？"%>
			 	</span>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>

