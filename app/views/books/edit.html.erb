<div class="container">
  <div class="row">
     <div class ="col-xs-12">
     	<main class="editing">
     	 <%= flash[:notice] %>
		  <h1>Editing Book</h1>
		    <%= form_for(@book) do |f| %>
			 <h4>タイトル</h4>
			 	<%= f.text_field :title %>
			 <h4>カテゴリー</h4>
			  	<%= f.text_field :body %>
				  <br>
				   <button type="submit" class="btn btn-success button-edit">Update Book</button>
				  <br>
				  <%= link_to "Show", book_path(@book.id) %>
				  <span>|</span>
				  <%= link_to "Back", books_path %>
			    <% end %>
			      <% if @book.errors.any? %>
		           <div class="alert">
		             <% @book.errors.full_messages.each do |message| %>
		                <p>error</p>
		                <span><%= message %></span>
	                 <% end %>
		           </div>
	            <% end %>
		</main>
	  </div>
   </div>
</div>