<!-- ユーザー情報画面 -->
 <h1>Userinfo</h1>
 <%= attachment_image_tag user, :profile_image,:fill,60,60,format:'jpeg', class: "img-profile", fallback: "no_image.jpg" %>

    <table>
      <tr>
        <td>Name</td>
        <td><%= user.name %></td>
      </tr>
      <tr>
        <td>Introduction</td>
        <td><%= user.introduction %></td>
      </tr>
    </table>
  <div class="profile-edit-button">
    <% if user.id == current_user.id %>
     <p><%= link_to"プロフィール編集",edit_user_path(user) %>  </p>
 <% end %>
</div>

<!-- 本を新規投稿する画面 -->
<h1>New Book</h1>

<%= form_for(book) do |f| %>

  <div class="field">
     <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :opinion %>
    <%= f.text_area :body %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<% if book.errors.any? %>
 <div class="alert">
    <% book.errors.full_messages.each do |message| %>
    <span><%= message %></span>
  <% end %>
</div>
<% end %>