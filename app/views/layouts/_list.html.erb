<!-- ユーザー情報画面 -->
 <h1>User info</h1>
 <%= attachment_image_tag user, :profile_image,:fill,100,100,format:'jpeg', class: "img-profile", fallback: "no_image.jpg" %>

    <table class="table white">
      <tr>
        <td>Name</td><br>
        <td><%= user.name %></td>
      </tr>
      <tr>
        <td>Introduction</td><br>
        <td><%= user.introduction %></td>
      </tr>
    </table>
    <br>
  <div class="profile-edit-button">
    <% if user.id == current_user.id %>
     <p><%= link_to"プロフィール編集",edit_user_path(user) %>  </p>
 <% end %>
</div>

<!-- 本を新規投稿する画面 -->
<h1>New book</h1>

<%= form_for(book) do |f| %>

  <div class="field">
     <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :opinion %><br>
    <%= f.text_area :body %>
  </div>

  <div class="actions">
   <button type="submit" class="btn btn-primary ">Create Book</button>
  </div>
<% end %>

<% if book.errors.any? %>
 <div class="alert">
    <% book.errors.full_messages.each do |message| %>
    <p>error</p>
    <span><%= message %></span>
  <% end %>
</div>
<% end %>