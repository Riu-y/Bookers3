<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
  <nav class="navbar  navbar-inverse">
  <div class="container-fluid">
    <div class ="col-lg-4">
       <div class="navbar-header navbar-left">
        <nav class="navbar-brand">Bookers</nav>
       </div>
    </div> 
    <div class ="col-lg-6">
            <div class="collapse navbar-collapse" id="navbarEexample7">
              <ul class="nav navbar-nav navbar-right">
               <% if user_signed_in? %>
                  <li><span class="glyphicon glyphicon-home header-link" aria-hidden="true"><%= link_to"Home", user_path(current_user.id), :style=>"color:#c0c0c0;" %></span></li>
                  <li><span class="glyphicon glyphicon-user header-link" aria-hidden="true"><%= link_to "Users",users_path, :style=>"color:#c0c0c0;" %></span></li>
                  <li><span class="glyphicon glyphicon-book header-link" aria-hidden="true"><%= link_to "Books", books_path, :style=>"color:#c0c0c0;" %></span></li>
                  <li><span class="glyphicon glyphicon-log-in header-link" aria-hidden="true"><%= link_to "Logout",destroy_user_session_path, :style=>"color:#c0c0c0;", method: :delete %></span></li>
               </ul>
               <% else %>
                <ul class="nav navbar-nav navbar-right">
                    <li><span class="glyphicon glyphicon-home header-link" aria-hidden="true"><%= link_to "Home" ,root_path, :style=>"color:#c0c0c0;" %></span></li>
                    <li><span class="glyphicon glyphicon-link header-link" aria-hidden="true"><%= link_to "About" ,home_about_path, :style=>"color:#c0c0c0;" %></span></li>
                    <li><span class="glyphicon glyphicon-pencil header-link" aria-hidden="true"><%= link_to "sign up", new_user_registration_path, :style=>"color:#c0c0c0;" %></span></li>
                    <li><span class="glyphicon glyphicon-log-in header-link" aria-hidden="true"><%= link_to "login", new_user_session_path, :style=>"color:#c0c0c0;" %></span></li>
                </ul>
              </div>
            </div>
           <% end %>
         </div>
      </nav>
   </div>
