<div class="container">
  <div class="row">
     <div class ="col-xs-3"><%= render 'layouts/list', {user: @user, book:@book } %></div>
       <div class="col-xs-9">
        <table class="table table-hover white">
          <thred>
          	<tr>
          		<th>Image</th>
          		<th>Name</th>
          		<th></th>
          	</tr>
          </thred>
          <% @users.each do |user| %>
           <tbody>
            	<tr>
                <td><%= attachment_image_tag user, :profile_image, :fill, 80,80, format:'jpeg',fallback: "no_image.jpg" %></td>
                <td><%= user.name %></td>
          	  	<td><%=link_to "Show", user_path(user.id) %></td>
              </tr>
           </tbody>
          <% end %>
        </table>
      </div>
   </div>
 </div>

