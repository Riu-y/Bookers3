<%= flash[:check] %>

<div class="container">
  <div class="row">
  	<div class="col-xs-1">
  	</div>
  	<div class ="col-xs-6">
	  <h1>User info</h1>
	   <%= form_for(@user) do |f| %>
	    <label class="profile-label" for="inputName">Name</label>
	      <%= f.text_field :name, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"名前"%><br>
	      <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%><br>
	    <label class="profile-label" for="inputEmail">Image</label>
	      <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %><br>
	    <label class="profile-label" for="inputText">Intrduction</label>
	      <%= f.text_field :introduction, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"introduction"%>
	      <%= f.submit "Update User" %>
	  <% end %>
    </div>
  </div>
</div>