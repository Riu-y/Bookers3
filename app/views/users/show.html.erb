<div class="container">
  <div class="row">
     <div class ="col-xs-3"><%= render 'layouts/list', {user: @user, book:@book } %></div>
       <div class="col-xs-9">
        <table class="table table-hover white">
        <thred>
        	<tr>
        		<th></th>
        		<th>Title</th>
        		<th>Opinion</th>
        	</tr>
        </thred>
        <tbody>
          <% @user.books.each do |book| %>
        	<tr>
      	  	<td><%= attachment_image_tag book.user, :profile_image, :fill, 80,80, format:'jpeg',fallback: "no_image.jpg" %></td>
      	  	<td><%= link_to book.title,book_path(book.id) %></td>
      	  	<td><%= book.body %></td>
          </tr>
          <% end %>
      </tbody>
     </table>
    </div>
  </div>
</div>

