<div class="container">
  <div class="row">
     <div class ="col-lg-4">
      <%= render 'layouts/list', {user: @user, book:@book } %>
      </div>
       <div class="col-lg-8">
        <table class="table table-hover white">
        <thred>
        	<tr>
        		<th></th>
        		<th>Title</th>
        		<th>Opinion</th>
        	</tr>
        </thred>
        <tbody>
          <% @user.books.each do |book| %>
        	<tr>
      	  	<td><%= attachment_image_tag book.user, :profile_image, :fill, 50,50, format:'jpeg' %></td>
      	  	<td><%= link_to book.title,book_path(book.id) %></td>
      	  	<td><%= book.body %></td>
          </tr>
          <% end %>
      </tbody>
     </table>
    </div>
  </div>
</div>

